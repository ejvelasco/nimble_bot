html
	head
		meta(name='viewport', content='width=device-width,initial-scale=1')
		title Nimble Bot
		meta(name='author', content='Eduardo J. Velasco')
		meta(name='description', content='A simple chat bot powered by the Watson API')
		link(rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
		link(rel="stylesheet" type="text/css" href="/build/Nimble.css")
	body(ng-app="NimbleApp" ng-controller="NimbleCtrl")
		.container
			.chat(ng-cloak)
				.chat-history#chat
					ul.chat-ul
						li(ng-repeat = "message in messages")
							div( ng-class = "message.title_class")
								span.message-data-name {{ message.subject }}
							div( ng-class = "message.class") {{ message.data }}
								p.time {{ message.time }}
					p(class="typing" ng-show="typing") Nimble is typing...
		.chat-window
			input(class="chat-input" id="chatInput" type="text" placeholder="Type a message..." ng-keydown="sendMsg($event)")
		script(src="/build/Nimble.js")